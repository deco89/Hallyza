<div class="container">
  <div class="card">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-4 col-xl-6">
        <%= simple_form_for(@article) do |f| %>
          <div class="form-inputs">
            <%= f.input :name, placeholder: "Nome do artigo" %>
          </div>
          <div class="form-inputs">
            <%= f.rich_text_area :rich_body, class: "trix-custom" %>
          </div>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.button :submit, name: "Confirm", class: "btn btn-flat" %>
          <% if article.id.nil? %>
            <%= link_to "Cancel", articles_path, method: :get, class: "btn btn-flat" %>
          <%else %>
            <%= link_to "Cancel", article_path, method: :get, class: "btn btn-flat" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
