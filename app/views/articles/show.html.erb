<% content_for :meta_title, "#{@article.name} | Dra HÃ¡llyz Rodrigues" %>
<% content_for :meta_description, @article.rich_body.to_plain_text.truncate(150) %>
<% content_for :meta_image, cl_image_path(@article.photos.first.key) if @article.photos.attached? %>

<div class="container">
  <div class="custom-card">
    <div class="card-body-article">
    <% if @article.photos.attached? %>
      <img src="<%= cl_image_path @article.photos.first.key %>" class="img-fluid" alt="Article Image">
    <% else %>
      <%= render "shared/sampleimg" %>
    <% end %>
      <h1 class="card-title-article"><%= @article.name %></h1>
      <span class="article-date mb-2"><%= @article.updated_at.strftime("%d de %B de %Y") %></span>
      <p class="card-text-article"><%= @article.rich_body %></p>
    </div>
  </div>
</div>
<div class="button-container d-flex flex-column justify-content-between align-items-center">
  <div class="top-button">
    <%= link_to "Voltar", articles_path, class: "btn-custom" %>
  </div>
  <% if user_signed_in? %>
    <div class="middle-button">
      <%= link_to "Editar artigo", edit_article_path, class: "btn-custom" %>
    </div>
    <div class="bottom-button">
      <%= link_to "Deletar Artigo", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-custom" %>
    </div>
  <% end %>
</div>
