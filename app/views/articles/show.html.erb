<div class="card-show">
  <% if @article.photos.attached? %>
    <%= cl_image_tag @article.photos.first.key, :width => 1800, :height => 800, :crop => :fill %>
  <% else %>
    <%= render "shared/sampleimg" %>
  <% end %>
  <h1><%= @article.name %></h1>
  <div class="container">
    <p><%= @article.rich_body %></p>
    <span class="card-date-time"><%= @article.updated_at.strftime("%d de %B de %Y") %></span>
    <div class="voltar-btn">
      <a><%= link_to "Voltar", articles_path %></a>
    </div>
  </div>
</div>
<a><%= link_to "Editar artigo | ", edit_article_path %></a>
<a><%= link_to "Voltar para artigos | ", articles_path %></a>
<a><%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></a>
