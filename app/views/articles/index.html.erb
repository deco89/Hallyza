<h1>Artigos</h1>
<div class="container-fluid">
  <div class="row row-cols-4 align-items-center">
    <div class="row w-100 md-center">
      <div class="articles-card">
        <% @articles.each do |article| %>
          <a href="<%= article_path(article) %>">
            <li><strong><%= article.name %></strong></li>
            <% if article.photos.attached? %>
              <%= cl_image_tag(article.photos.first.key, width: 400, height: 400, crop: :fill, class: "img-cl") %></a>
          <% else %>
            <%= image_tag('img1.jpeg', width: 400, height: 400, crop: :fill, class: "img-cl") %></a>
        <% end %>
      <% end %>
    </div>
      <%= link_to "Novo artigo", articles_new_path %>
  </div>
</div>
</div>

