<h1>Todos artigos</h1>

<%= link_to "Novo artigo", articles_new_path %>

<div class="container-fluid">
  <div class="row row-cols-4 align-items-center">
    <div class="row w-100 justify-content-md-center">
      <% @articles.each do |article| %>
          <div class="col-md-auto col-md-offset crdbig">
            <div class="index-article">
                <div class="index-products">
                    <div class="index-infos">
                      <div class="index-infos">
                        <div>
                        <a href="<%= article_path(article.id) %>">
                          <li><strong><%= article.name %></strong></li>
                          <% if article.photos.attached? %>
                            <%= cl_image_tag article.photos.first.key, :width => 400, :height => 400, :crop => :fill, class: "img-cl" %></a>
                          <% else %>
                            <%= image_tag 'img1.jpeg', :crop=>"fit", class: "img-cl" %></a>
                          <% end %>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
          </div>
        <% end %>
  </div>
</div>
