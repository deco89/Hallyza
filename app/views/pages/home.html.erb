<h1 class="artigos">Artigos</h1>

<div class="splide" data-controller="splide">
  <div class="splide__track">
    <ul class="splide__list">
      <% @articles.each_slice(1).each_with_index do |article_group, index| %>
        <li class="splide__slide">
          <div class="cards-wrapper">
            <% article_group.each do |article| %>
              <%= link_to article_path(article) do %>
                <div class="card-article">
                  <div class="card-article-image">
                    <% if article.photos.attached? %>
                      <%= cl_image_tag article.photos.first.key, width: 600, height: 200, crop: :fill, class: "card-img-top" %>
                    <% else %>
                      <%= render "shared/sampleimg" %>
                    <% end %>
                  </div>
                  <div class="card-body-carousel p-4">
                    <h5 class="card-title"><%= truncate( article.name, length: 50 )%></h5>
                    <span class="card-date-time" style="color: #B58169;"><%= article.updated_at.strftime("%d de %B de %Y") %></span>
                    <p class="card-text"><%= truncate(article.rich_body.to_plain_text, length: 120) %></p>
                    <%= link_to "Leia Mais", article_path(article), class: "btn-link a-leia" %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

